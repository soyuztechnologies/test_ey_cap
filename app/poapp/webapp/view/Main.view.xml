<mvc:View controllerName="poapp.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App id="app">
        <Page id="page" title="{i18n>title}">
            <content>
                <List id="idList" items="{/POWorklist}">
                    <items>
                        <ObjectListItem title="{PurchaseOrderId}" intro="{CompanyName}" 
                        number="{GrossAmount}" numberUnit="{CurrencyCode}" icon="sap-icon://product" />
                    </items>
                </List>
            </content>
        </Page>
    </App>
</mvc:View>
